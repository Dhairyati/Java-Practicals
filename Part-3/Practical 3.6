class Complex{
    int r1,r2,i1,i2,rd,id,p1,p2;

    Complex(){
        Scanner scn= new Scanner(System.in);
        System.out.println("Enter Real part of 1st Number: ");
        r1= scn.nextInt();
        System.out.println("Enter Imaginary part of 1st Number: ");
        i1= scn.nextInt();
