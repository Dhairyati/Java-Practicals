        r2= scn.nextInt();
        System.out.println("Enter Imaginary part of 2nd Number: ");
        i2= scn.nextInt();
    }
    public void sum(){
        System.out.println("Sum= ("+(r1+r2)+")+("+(i1+i2)+")i");
    }
    public void diff(){
        rd=r1-r2;
        id=i1-i2;
        System.out.println("Difference= ("+rd+")+("+id+")i");
    }
    public void pro(){
        p1=(r1*i1)-(r2*i2);
        p2=(r1*i2)+(r2*i1);
        System.out.println("Product= ("+(p1)+")+("+(p2)+")i");
    }
}
