class Date{
    int month,day,year;
    Date(){
        month=0;
        day=0;
        year=0;
    }
    public void setdata(){
        Scanner scn= new Scanner(System.in);
        System.out.println("Enter date: ");
        day=scn.nextInt();
        System.out.println("Enter month: ");
        month=scn.nextInt();
        System.out.println("Enter year: ");
        year=scn.nextInt();
    }
    public void displaydate(){
        System.out.println(day+"/"+month+"/"+year);
    }
}
